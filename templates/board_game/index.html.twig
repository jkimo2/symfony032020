{%  extends 'base.html.twig' %}

{% block body %}

    <h1>{{ 'board_game.index.title' | trans }}</h1>
    <table>
        <tr>
        <th>Nom</th>
        <th>Description</th>
        <th>Age</th>
        </tr>
        {% for board_game in board_games %}
            <tr>
                <td><a href="{{ path('app_boardgame_show', {id:board_game.id} ) }}">{{ board_game.name }}</a></td>
            <td>{{ board_game.description }}</td>
            <td>{{ board_game.ageGroup }}</td>
            <td>
                {% if  board_game.categories is not empty %}
                    {{ 'board_game.show.title_category' | trans }} : <br>
                    <ul>
                        {% for cat in board_game.categories %}
                            <li>{{ cat.name }}</li>
                        {%  endfor %}
                    </ul>
                {%  else %}
                    {{ 'board_game.show.no_category' | trans }}
                {%  endif  %}
            </td>
            <td><a href="{{ path('app_admin_boardgame_edit', {id:board_game.id} ) }}">{{ 'board_game.action.edit'|trans}}</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}